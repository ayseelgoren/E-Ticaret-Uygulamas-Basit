<script src="~/content/js/jquery-1.11.1.min.js"></script>

<script>
    $(document).ready(function () {
        //tarih kontrolü yapılamadı
        //$("#baslamaTarihi").change(function () {
        //    $("#bitisTarihi").val()
        //})
        $("#bitisTarihi").click(function () {
            alert("Promosyon Bitiş Tarihini Başlama Tarihinden Büyük Seçiniz.");
        })

        $("#secim").click(function () {

            $("#urunID").val("")
            $("#kategoriID").val("")

            $("#urunID").show(2000)
            $("#kategoriID").show(2000)
            $("#toplu").show(2000)

        })
        $("#urunID").click(function () {

            $("#toplu").hide(2000)
            $("#kategoriID").hide(2000)
            $("#kategoriID").val("")

        })
        $("#toplu").click(function () {

            $("#urunID").hide(2000)
            $("#kategoriID").hide(2000)
        })
        $("#kategoriID").click(function () {

            $("#urunID").hide(2000)
            $("#toplu").hide(2000)
            $("#urunID").val("")

        })

    })

</script>

