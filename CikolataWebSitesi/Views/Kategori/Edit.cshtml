@model CikolataWebSitesi.Models.tblKategori
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <button type="button" class="btn btn-outline-primary btn-lg">  @Html.ActionLink("Kategoriler", "Index")</button>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            <strong>Kategori Ekle</strong> Sayfası
        </div>
        <div class="card-body card-block">
            <form method="post" enctype="multipart/form-data" class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.kategoriID)
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="text-input" class=" form-control-label">Kateogori Adı</label>
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.EditorFor(model => model.kategoriAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.kategoriAdi, "", new { @class = "text-danger" })
                        <small class="form-text text-muted"></small>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success btn-lg" />
                    </div>
                </div>

            </form>
        </div>

    </div>
}


